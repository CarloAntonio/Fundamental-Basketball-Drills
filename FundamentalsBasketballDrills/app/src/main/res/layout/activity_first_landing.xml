<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <ImageView
        android:id="@+id/background_image_first_landing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_marginRight="-150dp"
        android:layout_marginEnd="-150dp"/>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/start_training_button"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"
            android:background="#B8FFFFFF">

            <EditText
                android:id="@+id/name_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:hint="Name"
                android:inputType="textCapWords"/>

            <EditText
                android:id="@+id/hometown_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/name_edit_text"
                android:layout_alignStart="@+id/name_edit_text"
                android:layout_below="@+id/name_edit_text"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:hint="Hometown, CA"
                android:inputType="textCapWords"/>

            <TextView
                android:id="@+id/position_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position"
                android:textSize="20sp"
                android:layout_below="@+id/hometown_edit_text"
                android:layout_marginTop="24dp"
                android:layout_centerHorizontal="true"/>

            <CheckBox
                android:id="@+id/center_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Center"
                android:layout_below="@+id/position_title"
                android:layout_centerHorizontal="true"/>

            <CheckBox
                android:id="@+id/point_guard_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="PointGuard"
                android:layout_below="@+id/center_checkbox"
                android:layout_centerHorizontal="true"/>

            <CheckBox
                android:id="@+id/small_forward_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Small Forward"
                android:layout_below="@+id/point_guard_checkbox"
                android:layout_centerHorizontal="true"/>

            <CheckBox
                android:id="@+id/power_forward_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Power Forward"
                android:layout_below="@+id/small_forward_checkbox"
                android:layout_centerHorizontal="true"/>

            <CheckBox
                android:id="@+id/shooting_guard_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Shooting Guard"
                android:layout_below="@+id/power_forward_checkbox"
                android:layout_centerHorizontal="true"/>



        </RelativeLayout>

        <Button
            android:id="@+id/start_training_button"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="47dp"
            android:background="@drawable/start_training_button"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="start training"
            android:textColor="#ffffff"
            android:textSize="14sp"/>


    </RelativeLayout>

</FrameLayout>